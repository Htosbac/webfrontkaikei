<%= form_for(room) do |f| %>

  <% if room.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= room.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <ul>
          <li><span><%= f.label "部屋名:" %></span>
          <%= f.text_field :name, { class: "form-control"} %>
          </li>
          <li><span><%= f.label "Ａ:" %></span>
          <%= f.text_field :price1, { class: "form-price"} %>円
          </li>
          <li><span><%= f.label "Ｂ:" %></span>
          <%= f.text_field :price2, { class: "form-price"} %>円
          </li>
          <li><span><%= f.label "Ｃ:" %></span>
          <%= f.text_field :price3, { class: "form-price"} %>円
          </li>
          <li><span><%= f.label "Ｄ:" %></span>
          <%= f.text_field :price4, { class: "form-price"} %>円
          </li>
          <li><span><%= f.label "Ｅ:" %></span>
          <%= f.text_field :price5, { class: "form-price"} %>円
          </li>
          <li><span><%= f.label "Ｆ:" %></span>
          <%= f.text_field :price6, { class: "form-price"} %>円
          </li>
          <li><span><%= f.label "宿泊可能人数:" %></span>
          <%= f.number_field :peoplenb, { class: "form-number"} %>人
          </li>
          <li><span><%= f.label "部屋タイプ:" %></span>
          <%= f.collection_select :roomtype_id, Roomtype.all, :id, :name, {:prompt => true}, { class: "form-select"} %>
          </li>
      </ul>
  </div>

<!--
  <div class="field">
    %= f.label :user_id %>
    %= f.text_field :user_id %>
  </div>
-->

  <div class="actions">
    <%= f.submit :class => "btn edit-btn" %>
  </div>
<% end %>
