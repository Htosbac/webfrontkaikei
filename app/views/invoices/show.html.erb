<!--<p id="notice">% notice %></p>-->

<div class="content-print">
  <h1>請求・領収書</h1>
   

   <div class="top clearfix">
    
    <div id="name" style="font-size: 120%;">
      <strong style="padding-right: 10px;">お客様名:</strong>
      <%= @invoice.customer %>
      <span style="float: right">様</span>
    </div>
       
    <div id="user">
     <ul>
         <li>
             <%= @invoice.user.invoicename1 %>
         </li>
         <li>
             <%= @invoice.user.invoicename2 %>
         </li>
         <li>
             〒<%= @invoice.user.pstalcode %>
         </li>
         <li>
             <%= @invoice.user.address %>
         </li>
         <li>
             TEL:<%= @invoice.user.tel %>&nbsp;
             FAX:<%= @invoice.user.fax %>
         </li>
         <li>
             E-mail:<%= @invoice.user.email %>
         </li>
     </ul>
    </div>
   </div>

    <table class="meisai_top">
      <thead>
        <tr>
          <th>ﾁｪｯｸｱｳﾄ日</th>
          <th>宿泊数</th>
          <th>大人数</th>
          <th>小人数</th>
          <th>部屋名</th>
        </tr>
      </thead>
      
      <tbody>
          <tr>
            <td style="text-align:left; width:18%;"><%= @invoice.checkoutday %></td>
            <td style="text-align:right; width:15%;"><%= @invoice.stays %></td>
            <td style="text-align:right; width:15%;"><%= @invoice.adults %></td>
            <td style="text-align:right; width:15%;"><%= @invoice.childs %></td>
            <td style="text-align:left; width:37%;"><%= @invoice.room.name %></td>
          </tr>
      </tbody>
    </table>

    <table class="meisai_top">
      <thead>
        <tr>
          <th>日付</th>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>金額</th>
        </tr>
      </thead>

      <tbody>
        <% @billingdetails.each do |b| %>
          <tr>
            <td style="text-align:left; width:18%;"><%= b.productdate %></td>
            <td style="text-align:left; width:37%;"><%= b.productname %></td>
            <td style="text-align:right; width:15%;"><%= number_with_delimiter(b.productprice.floor) %></td>
            <td style="text-align:right; width:15%;"><%= b.productnb %></td>
            <td style="text-align:right; width:15%;"><%= number_with_delimiter(b.total.floor) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <ul id="price">
<!--
        <li>
            <span>宿泊料金:</span>
            %= number_with_delimiter(@invoice.roomfee.floor) %>
        </li>
-->
        <li style="font-size: 120%;">
            <span>請求金額:</span>
            <strong><%=number_with_delimiter(@invoice.sototal.floor) %></strong>
        </li>
    </ul>
    
</div>

<div class="link">
  <%= link_to '編集画面', edit_invoice_path(@invoice) %> |
  <%= link_to '御会計トップ', invoices_path %>
</div>
